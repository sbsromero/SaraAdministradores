<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbsromero.proyectosadministradoressara.fragments.SolicitarCitaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/cedulaSolicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="@string/cedula"
            android:layout_marginTop="30dp"
            android:ems="10" />

        <EditText
            android:id="@+id/nombreSolicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cedulaSolicitante"
            android:layout_centerHorizontal="true"
            android:hint="@string/nombre"
            android:ems="10" />

        <Spinner
            android:id="@+id/spinnerSemestre"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/nombreSolicitante"
            android:layout_alignLeft="@+id/nombreSolicitante"
            android:layout_alignRight="@+id/nombreSolicitante"
            android:layout_alignStart="@+id/nombreSolicitante"
            android:layout_below="@+id/nombreSolicitante"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spinnerLineaMonitoria"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/nombreSolicitante"
            android:layout_alignLeft="@+id/nombreSolicitante"
            android:layout_alignRight="@+id/nombreSolicitante"
            android:layout_alignStart="@+id/nombreSolicitante"
            android:layout_below="@+id/spinnerSemestre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerLineaMonitoria"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Buscar" />



        <Spinner
            android:id="@+id/spinnerMonitores"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/nombreSolicitante"
            android:layout_alignLeft="@+id/nombreSolicitante"
            android:layout_alignRight="@+id/nombreSolicitante"
            android:layout_alignStart="@+id/nombreSolicitante"
            android:layout_below="@+id/botonBuscar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>

        <Spinner
            android:id="@+id/spinnerHorarioDisponible"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/nombreSolicitante"
            android:layout_alignLeft="@+id/nombreSolicitante"
            android:layout_alignRight="@+id/nombreSolicitante"
            android:layout_alignStart="@+id/nombreSolicitante"
            android:layout_below="@+id/spinnerMonitores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnAsignarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Asignar cita" />
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>


</FrameLayout>
