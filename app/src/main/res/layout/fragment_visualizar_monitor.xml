<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbsromero.proyectosadministradoressara.fragments.VisualizarMonitorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewFotoPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/image_circle" />

            <TextView
                android:id="@+id/textViewNombreMonitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewFotoPerfil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:ems="15"
                android:text="Nombre monitor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNombreMonitor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:text="Telefono monitor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTelefono"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:text="Username monitor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewSemestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUsername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:text="Semestre monitor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewLineaAsesoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSemestre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:text="Linea monitoria monitor"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewLineaAsesoria"
                android:layout_alignStart="@+id/textViewLineaAsesoria"
                android:layout_below="@+id/textViewLineaAsesoria"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:text="Citas pendiente"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/imgBtnCitasPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewLineaAsesoria"
                android:layout_alignRight="@+id/textViewLineaAsesoria"
                android:layout_below="@+id/textViewLineaAsesoria"
                android:src="@mipmap/ic_arrow_right" />
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
